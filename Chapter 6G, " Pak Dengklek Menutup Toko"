#include <iostream>
using namespace std;

int main() {
    int luas[4][3] = {
        {225 * 335, 299 * 278, 300 * 250},//[0][0] - [0][2]
        {215 * 394, 144 * 718, 300 * 290},//[1][0] - [1][2]
        {200 * 400, 240 * 333, 142 * 619},//[2][0] - [2][2]
        {314 * 298, 411 * 198, 333 * 222} //[3][0] - [3][2]
        };

    int harga_jual[3] = {100, 120, 150};
    int total[3] = {};
    for(int i =0; i<3; i++){
        for(int j=0; j<4; j++){
            total[i] += luas[j][i] * harga_jual[i];
        }
        cout<<total[i]<<endl;
    }
}
